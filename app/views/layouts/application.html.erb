<!DOCTYPE html>
<html>
  <head>

    <title>Darpaflix</title>
    <meta name="title" content="Darpaflix">
    <meta name="description" content="Designed to clone Netflix, for users to watch and enjoy media content online.">
    <meta property="og:image" content="https://raw.githubusercontent.com/sukhdipsrai/darpaflix/master/app/assets/images/darpaflix-preview.png">


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <script type="text/javascript">
      window.logoUrl = "<%= image_url('darpa-logo.png') %>";
      window.devVideoUrl = "<%= image_url('videoplayback.mp4') %>";
      window.devImageUrl = "<%= image_url('static-dev-image.webp') %>"
      window.checked =  "<%= image_url('check-mark.svg') %>"
      window.plus =  "<%= image_url('plus.svg') %>"
      window.play =  "<%= image_url('video-player.svg') %>"
      window.chevron = "<%= image_url('chevron.svg') %>"
      window.volume = "<%= image_url('volume.svg') %>"
      window.mute = "<%= image_url('mute.svg') %>"
      window.cancel = "<%= image_url('cancel.svg') %>"
    </script>
        <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
          <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
